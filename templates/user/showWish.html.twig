{% extends 'base.html.twig' %}

{% block title %}Voeux de {{ user.firstName }} {{ user.LastName }} {% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/wish.css') }}">
{% endblock %}

{% block body %}
    <h1>Voeux de {{ user.firstName }} {{ user.lastName }}</h1>
    <div class="row">
        {% if wishes is empty %}
            <h2>Aucun voeux pour l'utilisateur</h2>
        {% else %}
            {% for wish in wishes %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title">Voeux {{ wish.id }}</h2>
                            <dl>
                                <dt>Matière</dt>
                                <dd>{{ wish.subjectId.name }}</dd>
                                <dt>Détail</dt>
                                <dd>{{ wish.chosenGroups }} groupe(s) de {{ wish.groupeType.type }}</dd>
                            </dl>
                            {{ render(controller('App\\Controller\\WishController::edit', {'id': wish.id})) }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}