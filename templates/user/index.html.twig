{% extends 'base.html.twig' %}

{% block title %}Enseignant{% endblock %}


{% block body %}
    <h1 class="text-center">Enseignants</h1>
    <div class="row justify-content-center">
        {% for user in pagination %}
                <div class="col-md-4 mb-4">
                    <div class="card mx-auto">
                        <div class="card-body">
                            <h2 class="card-title">{{ user.firstName }} {{ user.LastName }}</h2>
                            <dl>
                                <dt>Email</dt>
                                <dd>{{ user.email }}</dd>
                            </dl>
                            <button type="button" class="btn btn-primary" onclick="window.location='{{ path('app_user_wish_show', {'id': user.id}) }}'">Voir les voeux</button>
                        </div>
                    </div>
                </div>
        {% endfor %}
    </div>

    <div class="pagination justify-content-center">
        {{ knp_pagination_render(pagination) }}
    </div>


{% endblock %}
