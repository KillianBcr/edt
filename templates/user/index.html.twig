{% extends 'base.html.twig' %}

{% block title %}Enseignant{% endblock %}

{% block body %}
    <h1>Enseignants</h1>
    <div class="row">
        {% for user in users %}
            {% if 'ROLE_ENSEIGNANT' in user.roles %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title">{{ user.firstName }} {{ user.LastName }}</h2>
                            <dl>
                                <dt>Email</dt>
                                <dd>{{ user.email }}</dd>
                            </dl>
                            <button type="button" class="btn btn-primary" onclick="window.location='{{ path('app_user_wish_show', {'id': user.id}) }}'">Voir les voeux</button>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
