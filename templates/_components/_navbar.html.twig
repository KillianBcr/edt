        <link href="{{ asset('css/navbar.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
{% endblock %}

{% block body %}
    <header class="header">
        <a href="/" class="logo">EDT</a>

        <nav class="navbar">
            <a href="/">Accueil</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin') }}">Admin</a>
                <a href="{{ path('app_user') }}">Voeux</a>
            {% endif %}
            <a href="#">Historique</a>
            <a href="{{ path('app_user_show')}}">Profil</a>
