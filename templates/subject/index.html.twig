{% extends 'base.html.twig' %}

{% block title %}Matières{% endblock %}


{% block body %}
    <h1 class="text-center">Matières</h1>
    <div class="row justify-content-center">
        {% for subject in pagination %}
            <div class="col-md-4 mb-4">
                <div class="card mx-auto">
                    <div class="card-body">
                        <h2 class="card-title">{{ subject.subjectCode.code}}</h2>
                        <dl>
                            <dt>Intitulé</dt>
                            <dd>{{ subject.name }}</dd>
                        </dl>
                        <button type="button" class="btn btn-primary" onclick="window.location='{{ path('app_subject_wish_show', {'id': subject.id}) }}'">Voir les voeux</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="pagination justify-content-center">
        {{ knp_pagination_render(pagination) }}
    </div>


{% endblock %}
