<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="get" action="{{ path('app_subject') }}">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Rechercher..." name="search" value="{{ app.request.query.get('search') }}">
                <button type="submit" class="btn btn-outline-secondary">Rechercher</button>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <form method="get" action="{{ path('app_subject') }}">
            <div class="input-group">
                <select class="form-control" name="semester">
                    <option value="" {% if not selectedSemester %}selected{% endif %}>Tout</option>
                    {% for semester in semesters %}
                        <option value="{{ semester.name }}" {% if selectedSemester == semester.name %}selected{% endif %}>{{ semester.name }}</option>
                    {% endfor %}
                </select>

                <div class="form-check ml-2">
                    <input type="checkbox" class="custom-control-input" id="showOnlyWithWishes" name="show_only_with_wishes" {% if app.request.query.get('show_only_with_wishes') %}checked{% endif %}>
                    <label class="custom-control-label" for="showOnlyWithWishes">Avec v≈ìux</label>
                </div>

                    <button type="submit" class="btn btn-outline-secondary">Filtrer</button>
            </div>
        </form>
    </div>

</div>